alias watch='watch '
alias aws="docker run --rm -it -v ~/.aws:/root/.aws -e AWS_PROFILE amazon/aws-cli"
alias awscli=aws
alias vimfzf="vim -o \$(fzf)"
alias batfzf="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"
alias terraform="docker run -u \$(id -u) --rm -it -v \$PWD:/workspace -v $HOME/.terraform.d:/.terraform.d -v \$HOME/.aws/config:/root/.aws./config -v \$HOME/.aws/credentials:/root/.aws/credentials -e AWS_PROFILE=\$AWS_PROFILE -w /workspace hashicorp/terraform:1.1.2"
alias az="docker run -u \$(id -u) --rm --name azure-cli -v \$HOME/.azure:/.azure bitnami/azure-cli:2.32.0"
